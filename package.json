{
  "scripts": {
    "serve": "omp-server",
    "dev": "npm run clean && npm-run-all -p -r -l dev:watch dev:server",
    "dev:watch": "cross-env NODE_ENV=dev rollup -c -w",
    "dev:server": "nodemon -x omp-server -w src/dist/main.js -d 2",
    "build": "npm run clean && cross-env NODE_ENV=prod rollup -c",
    "clean": "rimraf src/dist/*",
    "lint": "eslint src/* --fix -c .eslintrc",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "samp-node-lib": "^1.1.5",
    "serverless-mysql": "^1.5.4",
    "socket.io-client": "^4.5.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@sa-mp/node": "^0.2.0",
    "@types/node": "^18.11.17",
    "cross-env": "^7.0.3",
    "esbuild": "^0.15.18",
    "eslint": "^8.30.0",
    "husky": "^8.0.2",
    "iconv-lite": "^0.6.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^3.8.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-node-externals": "^5.0.3",
    "rollup-plugin-typescript-paths": "^1.4.0"
  }
}
